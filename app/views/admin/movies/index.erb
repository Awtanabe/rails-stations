<h1 class="mt-4">映画一覧</h1>

<%= link_to "映画作成", new_admin_movie_path%>
<div class="table table-responsive">
  <table>
    <thead>
      <tr>
        <th>作品ID</th>
        <th>映画タイトル</th>
        <th>公開年</th>
        <th>上映中</th>
        <th>概要</th>
        <th>画像URL</th>
        <th>開始時刻</th>
        <th>終了時刻</th>
        <th>作成日時</th>
        <th>更新日時</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.id %></td>
          <td><%= link_to movie.name, edit_admin_movie_path(movie) %></td>
          <td><%= movie.year %></td>
          <td><%= movie.is_showing ? '上映中' : '上映終了' %></td>
          <td><%= movie.description %></td>
          <td><%= movie.image_url ? image_tag(movie.image_url) : '' %></td>
          <td><%= movie.schedules.first&.start_time&.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= movie.schedules.first&.end_time&.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= movie.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= movie.updated_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

